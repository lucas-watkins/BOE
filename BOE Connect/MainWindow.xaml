<Window x:Class="BOE_Connect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BOE_Connect"
        mc:Ignorable="d"
        Title="BOE Connect" Height="600" Width="1000" MinWidth="1000" MinHeight="600">
    <Grid>
        <Grid Margin="110,100,110,49">
            <Border BorderBrush="Black" BorderThickness="2">
                <WebBrowser x:Name="browser"></WebBrowser>
            </Border>
        </Grid>
        <TextBox HorizontalAlignment="Left" Margin="110,50,0,0" TextWrapping="Wrap" Text="Sever IP" VerticalAlignment="Top" Width="120" x:Name="server_box"/>
        <TextBox HorizontalAlignment="Left" Margin="280,50,0,0" TextWrapping="Wrap" Text="Camera Port" VerticalAlignment="Top" Width="120" x:Name="camera_port"/>
        <TextBox HorizontalAlignment="Left" Margin="444,50,0,0" TextWrapping="Wrap" Text="Webserver Port" VerticalAlignment="Top" Width="120" x:Name="webserver_port"/>
        <Button Content=" Connect " HorizontalAlignment="Left" Margin="636,49,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
